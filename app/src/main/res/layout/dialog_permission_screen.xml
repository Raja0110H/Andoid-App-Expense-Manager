<?xml version="1.0" encoding="utf-8" ?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/layout_close_dialog"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:background="@color/white"
    android:tag="layout/dialog_exit_screen_0">

    <androidx.cardview.widget.CardView
        android:id="@+id/layout_main"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        app:cardBackgroundColor="@color/white"
        app:cardCornerRadius="5.0dip">

        <RelativeLayout
            android:layout_width="fill_parent"
            android:layout_height="wrap_content">

            <LinearLayout
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">


                <TextView
                    android:id="@+id/tv_title"
                    style="@style/TextAppearance.AppCompat.Widget.ActionBar.Title"
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="20.0dip"
                    android:layout_marginTop="20.0dip"
                    android:layout_marginRight="20.0dip"
                    android:gravity="center"
                    android:text="Permission Text"

                    android:textColor="@color/black" />

                <TextView
                    android:id="@+id/tv_alert"
                    style="@style/TextAppearance.AppCompat.Widget.ActionBar.Subtitle.Inverse"
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="10.0dip"
                    android:layout_marginTop="10.0dip"
                    android:layout_marginRight="10.0dip"

                    android:layout_marginBottom="15.0dip"
                    android:gravity="center"
                    android:text="Permission Text"
                    android:textColor="@color/black" />

                <LinearLayout
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="10.0dip"
                    android:layout_marginTop="10.0dip"
                    android:layout_marginRight="10.0dip"
                    android:layout_marginBottom="20.0dip"
                    android:orientation="horizontal">

                    <androidx.cardview.widget.CardView
                        android:id="@+id/btn_no"
                        android:layout_width="0.0dip"
                        android:layout_height="35.0dip"
                        android:layout_marginLeft="10.0dip"
                        android:layout_marginRight="10.0dip"
                        android:layout_weight="1.0"
                        android:foreground="?android:selectableItemBackground"
                        android:visibility="gone"

                        app:cardBackgroundColor="#333333"
                        app:cardCornerRadius="5.0dip">

                        <TextView
                            android:id="@+id/tv_no"
                            android:layout_width="fill_parent"
                            android:layout_height="fill_parent"

                            android:gravity="center"
                            android:text="No"
                            android:textAppearance="?android:textAppearanceSmall"
                            android:textColor="@color/white" />
                    </androidx.cardview.widget.CardView>

                    <androidx.cardview.widget.CardView
                        android:id="@+id/cv_rateme"
                        android:layout_width="0.0dip"
                        android:layout_height="35.0dip"
                        android:layout_marginLeft="10.0dip"
                        android:layout_marginRight="10.0dip"
                        android:layout_weight="1.0"
                        android:foreground="?android:selectableItemBackground"
                        android:visibility="gone"

                        app:cardBackgroundColor="#333333"
                        app:cardCornerRadius="5.0dip">

                        <TextView
                            android:id="@+id/ratemetx"
                            android:layout_width="fill_parent"
                            android:layout_height="fill_parent"

                            android:gravity="center"
                            android:text="Rate me"
                            android:textAppearance="?android:textAppearanceSmall"
                            android:textColor="@color/white" />
                    </androidx.cardview.widget.CardView>

                    <androidx.cardview.widget.CardView

                        android:id="@+id/btn_yes"
                        android:layout_width="0.0dip"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="10.0dip"
                        android:layout_marginRight="10.0dip"
                        android:layout_weight="1.0"
                        android:foreground="?android:selectableItemBackground"
                        app:cardBackgroundColor="@color/colorPrimary"
                        app:cardCornerRadius="5.0dip">

                        <TextView
                            android:id="@+id/tv_yes"
                            android:layout_width="fill_parent"
                            android:layout_height="fill_parent"
                            android:layout_marginTop="8dp"
                            android:layout_marginBottom="8dp"

                            android:gravity="center"
                            android:text="Ok"
                            android:textAppearance="?android:textAppearanceMedium"
                            android:textColor="@color/white" />
                    </androidx.cardview.widget.CardView>
                </LinearLayout>


            </LinearLayout>


        </RelativeLayout>
    </androidx.cardview.widget.CardView>
</FrameLayout>
