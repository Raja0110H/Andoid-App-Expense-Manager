<?xml version="1.0" encoding="utf-8" ?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/layout_close_dialog"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:background="@color/white30"
    android:tag="layout/dialog_exit_screen_0">

    <androidx.cardview.widget.CardView
        android:id="@+id/layout_main"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        app:cardBackgroundColor="@color/white"
        app:cardCornerRadius="5.0dip">

        <RelativeLayout
            android:layout_width="fill_parent"
            android:layout_height="wrap_content">


            <LinearLayout
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10.0dip"
                android:layout_marginTop="25.0dip"
                android:layout_marginRight="10.0dip"
                android:layout_marginBottom="20.0dip"

                android:orientation="vertical">


                <androidx.cardview.widget.CardView
                    android:id="@+id/cv_camera"
                    android:layout_width="match_parent"
                    android:layout_height="50.0dip"
                    android:layout_marginLeft="70.0dip"
                    android:layout_marginRight="70.0dip"
                    android:layout_weight="1.0"
                    android:foreground="?android:selectableItemBackground"

                    app:cardBackgroundColor="@color/colorPrimary"
                    app:cardCornerRadius="5.0dip">

                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent">

                        <ImageView
                            android:layout_width="34dp"
                            android:layout_height="34dp"
                            android:layout_centerVertical="true"
                            android:layout_marginRight="@dimen/text_10"
                            android:layout_toLeftOf="@+id/btn_e"
                            android:src="@drawable/photo_camera"
                            app:tint="#FFFFFF" />

                        <TextView
                            android:id="@+id/btn_e"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_centerInParent="true"

                            android:text="@string/action_camera"
                            android:textAppearance="?android:textAppearanceSmall"
                            android:textColor="@color/white"
                            android:textSize="17dp" />
                    </RelativeLayout>

                </androidx.cardview.widget.CardView>

                <androidx.cardview.widget.CardView
                    android:id="@+id/cv_gallery"
                    android:layout_width="match_parent"
                    android:layout_height="50.0dip"
                    android:layout_marginLeft="70.0dip"
                    android:layout_marginTop="@dimen/text_10"
                    android:layout_marginRight="70.0dip"
                    android:layout_weight="1.0"
                    android:foreground="?android:selectableItemBackground"
                    app:cardBackgroundColor="@color/colorPrimary"
                    app:cardCornerRadius="5.0dip">

                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent">

                        <ImageView
                            android:layout_width="34dp"
                            android:layout_height="34dp"
                            android:layout_centerVertical="true"
                            android:layout_marginRight="@dimen/text_10"
                            android:layout_toLeftOf="@+id/btn_g"
                            android:src="@drawable/gallery"
                            app:tint="#FFFFFF" />

                        <TextView
                            android:id="@+id/btn_g"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_centerInParent="true"

                            android:text="@string/action_gallery"
                            android:textAppearance="?android:textAppearanceSmall"
                            android:textColor="@color/white"
                            android:textSize="17dp" />
                    </RelativeLayout>

                </androidx.cardview.widget.CardView>
            </LinearLayout>


        </RelativeLayout>
    </androidx.cardview.widget.CardView>
</FrameLayout>
