<resources>

    <!-- Base application theme. -->

    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="android:windowNoTitle">true</item>
        <item name="windowActionBar">true</item>
    </style>


    <style name="AppTheme_AppBarOverlay"></style>

    <style name="AppTheme.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="AppTheme.Intro">
        <item name="android:windowBackground">@android:color/transparent</item>
        <item name="android:windowIsTranslucent">true</item>
    </style>

    <style name="Permissions_TransparentTheme"></style>

    <style name="InvitationDialog">
        <item name="android:textColorPrimary">@color/colorPrimary</item>
        <item name="android:background">@color/transparant</item>
        <item name="android:editTextColor">@color/black</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="DialogAimation">
        <item name="android:windowEnterAnimation">@anim/slide_up</item>
        <item name="android:windowExitAnimation">@anim/slide_bottom</item>
    </style>
    <style name="btnNormalAds">
        <item name="android:textSize">14dp</item>
        <item name="android:textColor">@android:color/white</item>
        <item name="android:background">@drawable/bg_btn_ads</item>
        <item name="android:layout_height">32dp</item>
    </style>
    <style name="AppTheme.AdAttribution" parent="@style/AppTheme">
        <item name="android:textSize">12.0sp</item>
        <item name="android:textColor">#ffffffff</item>
        <item name="android:layout_gravity">left</item>
        <item name="android:background">@color/adscolornew</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:text">Ad</item>
        <item name="android:height">15.0dip</item>
        <item name="android:width">15.0dip</item>
    </style>

    <style name="AppTheme.AdAttribution111" parent="@style/AppTheme">
        <item name="android:textSize">10sp</item>
        <item name="android:textColor">#ffffffff</item>
        <item name="android:layout_gravity">right</item>
        <item name="android:paddingLeft">2dp</item>
        <item name="android:paddingRight">2dp</item>
        <item name="android:background">@drawable/bg_ads_choice</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:text">"Ads"</item>
    </style>
</resources>
